
@model PersonnelDepartment.ViewModels.PersonnelFViewModels
@{
                /**/

                /**/

                ViewBag.Title = "PersonnelF";
                Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Personnel</h2>
@Html.ValidationSummary()
@using (Html.BeginForm("Create", "Personnel", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.Personnel.Name)
        @Html.TextBoxFor(m => m.Personnel.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Personnel.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Personnel.Surname)
        @Html.TextBoxFor(m => m.Personnel.Surname, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Personnel.Surname)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Personnel.Date_of_Birth)
        @Html.TextBoxFor(m => m.Personnel.Date_of_Birth, "{0:yyyy-MM-dd}", new { @class = "form-control",
       type = "date" ,onchange= "CheckDateTypeIsValue(this)"})
        @Html.ValidationMessageFor(m => m.Personnel.Date_of_Birth)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Personnel.Gender)

        <div class="radio">
            <label> @Html.RadioButtonFor(m => m.Personnel.Gender, true)Male</label>
            <label> @Html.RadioButtonFor(m => m.Personnel.Gender, false)Female</label>
        </div>
        @Html.ValidationMessageFor(m => m.Personnel.Gender)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Personnel.Married)
        <div class="radio">
            <label> @Html.RadioButtonFor(m => m.Personnel.Married, true)Married</label>
            <label> @Html.RadioButtonFor(m => m.Personnel.Married, false)Single</label>
        </div>
        @Html.ValidationMessageFor(m => m.Personnel.Married)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Personnel.DepartmentId)
        @Html.DropDownListFor(m => m.Personnel.DepartmentId, new SelectList(Model.Departments, "Id", "Name"), "Department Selection", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Personnel.DepartmentId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Personnel.Salary)
        @Html.TextBoxFor(m => m.Personnel.Salary, new { @class = "form-control" })

        @Html.ValidationMessageFor(m => m.Personnel.Salary)
    </div>
    @Html.HiddenFor(m => m.Personnel.Id);
    <button type="submit" class="btn btn-default">Add</button>
}

@section scripts
{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}

